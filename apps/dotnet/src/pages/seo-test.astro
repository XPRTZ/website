---
// Test page to verify SEO implementation
import Layout from "../layouts/layout.astro";
import { generateWebsiteStructuredData, SEOTools } from "@xprtz/ui";

const siteUrl = Astro.site?.toString() || "https://xprtz.net";

const structuredData = generateWebsiteStructuredData({
  name: "SEO Test Page - XPRTZ",
  url: `${siteUrl}/seo-test`,
  description:
    "This is a test page to verify that all SEO elements are working correctly.",
});

const breadcrumbs = [
  { name: "Home", url: siteUrl },
  { name: "SEO Test", url: `${siteUrl}/seo-test` },
];
