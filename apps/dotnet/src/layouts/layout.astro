---
import { BaseHead, Footer, Header } from '@xprtz/ui'
import Logo from '../images/logo.svg'
const { title, description } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <BaseHead title={title} description={description} />
  </head>
  <!-- Body background & text colors toggle with dark mode -->
  <body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">
    <!-- Header includes client-side dark mode toggle -->
    <Header Logo={Logo.src} client:load />
    <main class="isolate">
      <slot />
    </main>
    <Footer />
  </body>
</html>
