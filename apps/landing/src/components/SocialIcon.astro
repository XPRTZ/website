---
interface Props {
  href: string;
  icon: string;
  label: string;
}

const { href, icon, label } = Astro.props;
---
<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="text-white hover:text-gray-300 transition-colors"
  aria-label={label}
>
  <i class={`fab fa-${icon} text-xl`}></i>
</a>