---
interface Props {
  href: string;
  text: string;
  subtext: string;
  side: 'left' | 'right';
}

const { href, text, subtext, side } = Astro.props;
const colorClass = side === 'left' ? 'text-green-100' : 'text-blue-100';
const hoverBgClass = side === 'left' ? 'hover:bg-green-900/10' : 'hover:bg-blue-900/10';
const id = `${side}-side`;
---
<a
  href={href}
  class={`w-1/2 transition-opacity duration-300 ${hoverBgClass} flex items-center justify-center relative group`}
  id={id}
>
  <div class="text-center -mt-48 md:mt-0">
    <h2 class={`text-2xl md:text-8xl font-bold ${colorClass} mb-2 sm:mt-24`}>{text}</h2>
    <p class="text-white text-xl md:text-4xl opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      {subtext}
    </p>
  </div>
</a>
