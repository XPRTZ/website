import type { Position } from "@xprtz/ui/src/Types";

const companyGreeting = "Werken bij XPRTZ.CLOUD";
const jobDescription0 = "De Azure cloud biedt organisaties legio manieren om te versnellen. En als Azure cloud professional help je klanten om deze versnelling te realiseren.";
const jobDescription1 = "Bij XPRTZ kiezen we samen jouw ideale opdracht.";
const jobDescription2 = "In ons clubhuis laat je jouw pool-, race- en cloudskills zien tijdens de diverse meetups, kennissessies en labdagen of praat je gewoon lekker bij met gelijkgestemde cloud experts die je écht kent. Jouw expertise en T-shaped profiel laat zich niet makkelijk labelen, maar we onderscheiden grofweg de volgende rollen:";
const positions: Position[] = [
    {
        id: 1,
        role: "Devops engineer",
        href: "#",
        description:
        "Engineers die hun energie halen uit het inrichten en verbeteren van CI/CD pipelines richting de cloud en het automatiseren van allerhande zaken in het domein van software development en quality assurance.",
    },
    {
        id: 2,
        role: "Cloud engineer",
        href: "#",
        description:
        "Vanuit een DevOps mindset applicaties maken en doorontwikkelen in de Azure cloud met een brede kennis van Azure services en diensten. Zaken als containerization, networking en cloud native concepten zijn gesneden koek voor deze experts.",
    },
    {
        id: 3,
        role: "Cloud architect",
        href: "#",
        description:
        "Onze klanten helpen bij het inpassen van workloads in het bestaande applicatielandschap in de Azure cloud. Je staat echter nog met beide benen in de techniek en je snapt, naast de architectuur thema's, ook de complexiteiten van software ontwikkeling voor de cloud.",
    }
];
const contactGreeting = "Meer weten?";
const contactDescription = "We maken graag een vrijblijvende afspraak om onze kennis en enthousiasme te delen, op een locatie en tijdstip dat iedereen het beste uitkomt.";
