const addressPart0 = "Tractieweg 41";
const addressPart1 = "Utrecht, 3534 AP";
const phone0Link = "tel:+31 (6) 10394044";
const phone0 = "+31 (6) 10 39 40 44";
const phone0Suffix = "(Jasper)";
const phone1Link = "tel:+31 (6) 11109466";
const phone1 = "+31 (6) 11 10 94 66";
const phone1Suffix = "(Dennis)";
const mailtoLink = "mailto:algemeen@xprtz.cloud";
const email = "algemeen@xprtz.cloud";
const whatYouGetGreeting = "Wat krijg je?";
const whatYouGetList: string[] = [
    "Fulltime vast contract (40 uur).",
    "Een laptop naar keuze.",
    "26 vakantiedagen.",
    "Riante winstdeling aan het einde van het jaar.",
    "Opleidingsbudget.",
    "Stabiele organisatie met lange termijn focus.",
    "Toonaangevende opdrachtgevers in heel Nederland."
];
