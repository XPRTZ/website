---

<Layout title="XPRTZ.cloud" description="Dé plek voor Cloud experts!">
    <WorkAt client:only
        companyGreeting={companyGreeting}
        jobDescription0={jobDescription0}
        jobDescription1={jobDescription1}
        jobDescription2={jobDescription2}
        positions={positions}
        contactGreeting={contactGreeting}
        contactDescription={contactDescription}
        addressLink={addressLink}
        addressPart0={addressPart0}
        addressPart1={addressPart1}
        phone0Link={phone0Link}
        phone0={phone0}
        phone0Suffix={phone0Suffix}
        phone1Link={phone1Link}
        phone1={phone1}
        phone1Suffix={phone1Suffix}
        mailtoLink={mailtoLink}
        email={email}
        whatYouGetGreeting={whatYouGetGreeting}
        whatYouGetList={whatYouGetList}
        whatYouBringGreeting={whatYouBringGreeting}
        whatYouBringList={whatYouBringList}/>
</Layout>
