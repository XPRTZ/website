---
import { marked } from "marked";

interface SubtitleWithTextProps {
  __component: "ui.titel";
  id: number;
  title: string;
  content: string;
}

const { title, content } = Astro.props as SubtitleWithTextProps;
const htmlContent = marked.parse(content);
---
<h2
  class="mt-12 text-pretty text-3xl font-semibold tracking-tight text-primary-600"
>
  {title}
</h2>
<div class="mt-6" set:html={htmlContent}></div>
